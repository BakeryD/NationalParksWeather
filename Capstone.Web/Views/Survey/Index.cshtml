@model IList<FavoriteParkModel>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Show_Message"] != null)
{
    <p class="alert-success text-center text-capitalize">Your survey was successfuly submitted!</p>
}
<h2 class="text-center">Favorite Parks!</h2>
<br />
<p>Add a Park Survey <a asp-controller="survey" asp-action="new">Here!</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th><strong>Park Name</strong></th>
            <th><strong>Survey Count</strong></th>
        </tr>
    </thead>
    @foreach (var fav in Model)
    {
        <tr>
            <td class="fav-park-img-quote img-responsive"
                style="background-image:url(../images/@fav.ImageName);">
                <div class="survey-img"
                     style="min-height:300px;width:55%;">
                    <blockquote>@fav.Quote <br /><small>@fav.QuoteSource</small> </blockquote>
                </div>
            </td>
            <td>@fav.Name</td>
            <td>@fav.SurveyCount Surveys submitted</td>
        </tr>
    }
</table>
