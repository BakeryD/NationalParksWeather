@model IList<Park>

@{
    ViewData["Title"] = "Home Page";
}

@* TABLE VS DIV *@


<div id="allParksHome">
    @foreach (var park in Model)
    {
        @*   Added in-line styles becuase it saves us from having to write a css selector/style for each park image   *@

    <a asp-action="Detail" asp-controller="Home" asp-route-id="@park.ParkCode" class="park-link" style="background-image:url(../images/@park.ImageName);background-repeat:no-repeat;background-size:cover;">
        
        @*<div class="park-listing" >*@
            @*<img class="paint-border-top" src="~/images/texture-top.png" />*@
            <div class="name-div"><h2 class="name">@park.Name</h2></div>
            <div class="state-description">
                <h4 class="state">@park.State</h4>
                <p class="park-description">@park.Description</p>
            </div>

            @*<img class="paint-border-btm" src="~/images/texture-bottom.png" />*@
        @*</div>*@
        
    </a>
    
     }
</div>